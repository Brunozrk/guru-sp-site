<h2>Editando seu Perfil</h2>

<div class="inner">
  <%= semantic_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put } do |form| %>
    <%= form.inputs do %>
      <%= form.input :email %>
      <%= form.input :github, :hint => "nome do usuário no Github" %>
      <%= form.input :password, :label => "Nova senha", :hint => "deixe em branco se não quiser alterá-la" %>
      <%= form.input :password_confirmation, :label => "Confirmação da nova senha" %>
      <%= form.input :password_confirmation, :label => "Senha atual*", :hint => "Forneça sua senha atual para alterar seus dados" %>
    <% end %>
    <%= form.buttons do %>
      <%= form.commit_button :label => "Atualizar perfil" %>
    <% end %>
  <% end %>
</div>

<h2>Cancelamento de conta</h2>
<div class="inner">
  <p>Infeliz? <%= link_to "Cancelar sua conta", registration_path(resource_name), :confirm => "Tem certeza disso?", :method => :delete %>.</p>
</div>

